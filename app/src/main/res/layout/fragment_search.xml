<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.SearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">
        <androidx.appcompat.widget.SearchView
            app:marginTopSystemWindowInsets="true"
            android:id="@+id/svSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:defaultQueryHint="What do you want to listen to?"
            android:background="@drawable/shapebgsearch">

        </androidx.appcompat.widget.SearchView>
        <FrameLayout
            android:layout_below="@+id/svSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/suggestList"
                    tools:listitem="@layout/item_suggest_query"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/recentlyQueryView"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recentlyList"
                        tools:listitem="@layout/item_recently_query">

                    </androidx.recyclerview.widget.RecyclerView>
                    <Button
                        android:id="@+id/btClearSearchHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="Clear search history"
                        android:textColor="?attr/colorOnBackground">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/resultView"
                    android:visibility="gone">
                    <HorizontalScrollView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:scrollbars="none">
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTypeSearch"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:singleSelection="true"
                        app:singleLine="true">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAll"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            style="@style/Widget.MaterialComponents.Chip.Filter" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chipVideo"
                            android:text="Videos"
                            style="@style/Widget.MaterialComponents.Chip.Filter"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Songs"
                            style="@style/Widget.MaterialComponents.Chip.Filter" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipArtists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Artists"
                            style="@style/Widget.MaterialComponents.Chip.Filter" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAlbum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Albums"
                            style="@style/Widget.MaterialComponents.Chip.Filter" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPlaylist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Playlists"
                            style="@style/Widget.MaterialComponents.Chip.Filter" />

                    </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/refreshSearch"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/resultList"
                                android:paddingBottom="135sp"
                                android:clipToPadding="false">

                            </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
        <RelativeLayout
            android:id="@+id/defaultLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/svSearch"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Everything you need"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="10sp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search for songs, artists, albums, playlists, and more"
                    android:textSize="14sp"
                    android:gravity="center">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>